<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
   <session-factory>
   
      <property name = "hibernate.dialect">
         org.hibernate.dialect.MySQLDialect
      </property>
      
      <property name = "hibernate.connection.driver_class">
         com.mysql.cj.jdbc.Driver
      </property>
      
      <!-- Assume test is the database name -->
      
      <property name = "hibernate.connection.url">
         jdbc:mysql://localhost/petstore_jsp_hibernate
      </property>
      
      <property name = "hibernate.connection.username">
         student
      </property>
      
      <property name = "hibernate.connection.password">
         student
      </property>
      
      <property name = "hibernate.hbm2ddl.auto">
      	 update
      </property>
      
      <!-- List of mapped classes -->
      <mapping class="com.puklod.entity.Animal"/>
      <mapping class="com.puklod.entity.Aquatic"/>
      <mapping class="com.puklod.entity.Bird"/>
      <mapping class="com.puklod.entity.Dog"/>
      <mapping class="com.puklod.entity.Fish"/>
      <mapping class="com.puklod.entity.Mammal"/>
      <mapping class="com.puklod.entity.Parrot"/>
      <mapping class="com.puklod.entity.Reptile"/>
      <mapping class="com.puklod.entity.Snake"/>
      <mapping class="com.puklod.entity.Store"/>
      <mapping class="com.puklod.entity.User"/>
      
   </session-factory>
</hibernate-configuration>